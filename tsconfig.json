{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    // "baseUrl": "./src",
    "strict": true,
    "target": "ES2021",
    "useDefineForClassFields": false,
    // "paths": {
    //   "@component": [
    //     "./component"
    //   ],
    //   "@component/*": [
    //     "./component/*"
    //   ],
    //   "@types": [
    //     "./component/types"
    //   ],
    //   "@utils": [
    //     "./component/utils"
    //   ]
    // }
  },
  "include": [
    "./src/**/*",
    "./global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist",
  ]
}